<div class="w-full px-4 md:px-6 lg:px-8 py-6">
  <% if notice.present? %>
    <!-- Notification Panel -->
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Notice:</strong>
      <span class="block sm:inline"><%= notice %></span>
      <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
        <svg class="fill-current h-6 w-6 text-green-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
          <title>Close</title>
          <path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.396 7.349 14.049a1.2 1.2 0 1 1-1.697-1.697L8.603 9.699 5.652 6.747a1.2 1.2 0 1 1 1.697-1.697L10 8.003l2.651-2.653a1.2 1.2 0 1 1 1.697 1.697L11.397 9.699l2.951 2.952a1.2 1.2 0 0 1 0 1.698z"/>
        </svg>
      </span>
    </div>
  <% end %>

  <div class="flex justify-between items-center my-8">
    <h1 class="font-bold text-4xl">Users</h1>
    <%= link_to "New user", new_admin_user_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300" %>
  </div>

  <div id="admin_users" class="min-w-full">
    <%= render @admin_users %>
  </div>
</div>
