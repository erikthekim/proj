<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_user %>

    <%= link_to "Edit this user", edit_admin_user_path(@admin_user), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 dark:hover:bg-gray-300 font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this user", admin_user_path(@admin_user), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 dark:hover:bg-gray-300 font-medium" %>
    </div>
    <%= link_to "Back to users", admin_users_path, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 dark:hover:bg-gray-300 font-medium" %>
  </div>
</div>
