<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @admin_party %>
    <!-- app/views/parties/show.html.erb -->
<p><strong>Time:</strong> <%= @admin_party.time.strftime("%B %d, %Y %H:%M") %></p>
<p><strong>Host:</strong> <%= @admin_party.host %></p>
<p><strong>Alcohol Available:</strong> <%= @admin_party.alcohol_available ? 'Yes' : 'No' %></p>

<!-- And similar updates for the index view -->


    <%= link_to "Edit this party", edit_admin_party_path(@admin_party), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this party", admin_party_path(@admin_party), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to "Back to parties", admin_parties_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
