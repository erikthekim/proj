<div id="<%= dom_id party %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= party.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= party.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Interest count:</strong>
    <%= party.interest_count %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this party", [:admin, party], class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this party", edit_admin_party_path(party), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
